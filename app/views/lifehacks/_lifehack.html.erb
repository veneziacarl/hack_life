
<div class="row">
    <% @lifehacks.each do |lifehack| %>
    <div class="panel large-12 columns clearfix">
    <!-- <div class="panel right large-12 columns"> -->
       <table>
        <thead>
          <tr>
            <th>
            <h5 class="lifehack_link"><%= link_to lifehack.title, lifehack_path(lifehack) %></h5>
          </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= time_ago_in_words(lifehack.created_at)%></td>
            <td>Submitted By: <%= lifehack.creator.first_name %> </td>
            <td>Average Rating:</td>
            <td class="profile-info">
                <%= image_tag(lifehack.creator.profile_photo, :class => "profile_img_index") %>
            </td>
            <td>Description: <%= lifehack.short_description %> ... </td>
          </tr>
        </tbody>
      </table>
    </div>
    <% end %>
  </div>
