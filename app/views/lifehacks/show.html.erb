
<div class="row">
  <ul class="button medium">
    <%= link_to 'Home', lifehacks_path %>
  </ul>
  <ul class="button medium">
    <%= link_to 'Add Review', new_lifehack_review_path(@lifehack) %>
  </ul>

    <% if @lifehack.creator == current_user || current_user.admin? %>
      <div class="button lifehack-admin-panel">
        <%= link_to 'Edit Lifehack', edit_lifehack_path(@lifehack) %>
      </div>
      <div class="button lifehack-admin-delete">
        <%= link_to 'Delete Lifehack', @lifehack, { method: :delete} %>
      </div>
    <% end %>
  </ul>
</div>
  <div class="panel lifehack_title small-12 columns ">
    <h2><%= @lifehack.title %></h2>
  </div>
  <div class="row description">
    <table>
      <thead>
        <tr>
          <th>Created By:</th>
          <th># of Reviews:</th>
          <th>Average Rating:</th>
          <th>Updated:</th>
        </tr>
      </thead>
      <tr>
        <td><%= link_to @lifehack.creator.full_name, user_path(@lifehack.creator) %></td>
        <td><%= @lifehack.reviews.count %></td>
        <td><%= @lifehack.avg_review_rating %></td>
        <td><%= time_ago_in_words(@lifehack.updated_at)%> ago</td>
      </tr>
    </table>
  </div>

    <table class="show-descrip">
      <tbody>
        <tr><%= @lifehack.description %></tr>
      </tbody>
    </table>
    <table class="show-url">
      <tbody>
        <tr><td class="source"><%= link_to "Source", @lifehack.url %></td></tr>
    </tbody>
    </table>

  </div>
</div>
</div>

<hr />
<h3 class="all-reviews">All Reviews:</h3>
<% if !@lifehack.reviews.empty? %>
  <%= render @reviews %>
<% else %>
  <div class="no-reviews">
    <p>No reviews yet!</p>
  </div>
<% end %>
