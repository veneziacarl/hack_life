<%= form_for [@lifehack] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.hidden_field :creator, value: current_user %>

  <div class="actions">
      <%= f.submit 'Add Lifehack', class: 'button tiny'%>
  </div>

<% end %>
