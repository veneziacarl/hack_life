<div class="inline">

<%= form_for [@lifehack] do |f| %>

  <%= f.label :title, class:'form-text' %>
  <%= f.text_field :title %>

  <%= f.label :description, class:'form-text' %>
  <%= f.text_field :description %>

  <%= f.hidden_field :creator, value: current_user %>

  <div class="actions">
    <% unless current_page?(new_lifehack_path) %>
      <%= f.submit 'Update Lifehack', class: 'button'%>
    <% else %>
      <%= f.submit 'Add Lifehack', class: 'button'%>
    <% end %>
  </div>
<% end %>
